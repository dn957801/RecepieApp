<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dinesh.recepieapp.serachRecepie">

    <EditText
        android:id="@+id/recepieSearch"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="176dp" />

    <Button
        android:id="@+id/button_search_recepie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/recepieSearch"
        android:layout_alignBottom="@+id/recepieSearch"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:text="SEARCH"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="231dp" />

    <ListView
        android:id="@+id/recepie_search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/recepieSearch"
        android:layout_below="@+id/button_search_recepie"
        android:layout_marginTop="50dp" />
</RelativeLayout>
