<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recepieX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recepieX"
        android:layout_marginTop="45dp"
        android:text="DESCRIPTION" />

    <EditText
        android:id="@+id/descr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/description"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/description"
        android:layout_marginTop="23dp"
        android:text="INGREDIENTS" />

    <EditText
        android:id="@+id/ingr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/descr_text"
        android:layout_below="@+id/descr_text" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ingredients"
        android:layout_marginTop="29dp"
        android:text="INSTRUCTIONS" />

    <EditText
        android:id="@+id/inst_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ingr_text"
        android:layout_below="@+id/ingr_text" />

    <!--
    <Button
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/instructions"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp"
        android:text="EDIT" />
    -->

    <Button
        android:id="@+id/save_recepie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="53dp"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/ingr_text"
        android:text="SAVE" />

    <!--<Button
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/delete"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:text="RATE" />
    -->

    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="URL (IF ANY)" />

    <EditText
        android:id="@+id/u_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/url"
        android:layout_alignStart="@+id/inst_text" />

    <Button
        android:id="@+id/cancel_recepie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/save_recepie"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/ingr_text"
        android:text="CANCEL" />

</RelativeLayout>
