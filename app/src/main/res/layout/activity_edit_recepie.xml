<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMine1">

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recepieX"
        android:layout_marginTop="45dp"
        android:text="DESCRIPTION" />

    <EditText
        android:id="@+id/description_text_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/description"
        android:layout_alignBottom="@+id/description"
        android:layout_marginStart="87dp"
        android:layout_toEndOf="@+id/description" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/description"
        android:layout_marginTop="23dp"
        android:text="INGREDIENTS" />

    <EditText
        android:id="@+id/ingred_text_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ingredients"
        android:layout_alignBottom="@+id/ingredients"
        android:layout_alignStart="@+id/description_text_update" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ingredients"
        android:layout_marginTop="29dp"
        android:text="INSTRUCTIONS" />

    <EditText
        android:id="@+id/instruction_text_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/instructions"
        android:layout_alignBottom="@+id/instructions"
        android:layout_alignStart="@+id/ingred_text_update" />

    <Button
        android:id="@+id/SAVE"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="SAVE" />

    <EditText
        android:id="@+id/url_text_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/instruction_text_update"
        android:layout_below="@+id/instruction_text_update" />

    <TextView
        android:id="@+id/urlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/url_text_update"
        android:layout_alignBottom="@+id/url_text_update"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:text="URL" />

</RelativeLayout>
